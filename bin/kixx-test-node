#!/usr/bin/env node

'use strict';

const Yargs = require(`yargs`);
const { main } = require('../');

const DEFAULT_VALUES = Object.freeze({
	DIRECTORY: `test`,
	TIMEOUT: 5000,
	MAX_ERRORS: Infinity,
	MAX_STACK: 5
});

const ARGV = Yargs
	.option(`directory`, {
		alias: `d`,
		describe: `The name of your test directory. (default="${DEFAULT_VALUES.DIRECTORY}")`,
		type: `string`
	})
	.option(`timeout`, {
		alias: `t`,
		describe: `The time limit for each .before(), .after(), and .it() block. (default=${DEFAULT_VALUES.TIMEOUT})`,
		type: `number`
	})
	.option(`pattern`, {
		describe: `Only describe blocks and tests which match the given pattern will be run`,
		type: `string`
	})
	.option(`maxErrors`, {
		describe: `The maximum errors allowed before exiting. "-1" will result in Infinity. (default=${DEFAULT_VALUES.MAX_ERRORS})`,
		type: `number`
	})
	.option(`verbose`, {
		describe: `Boolean flag to set verbose mode.`,
		boolean: true
	})
	.option(`quiet`, {
		describe: `Boolean flag to set quiet mode.`,
		boolean: true
	})
	.option(`maxStack`, {
		describe: `The maximum number of lines you want in your stack traces. (default=${DEFAULT_VALUES.MAX_STACK})`,
		type: `number`
	}).argv;

try {
	main({ ARGV, DEFAULT_VALUES });
} catch (err) {
	if (err.code === `USER_ERROR`) {
		console.error(err.message);
		console.error(`\nExiting.\n`);
		process.exit(1);
	}
	throw err;
}
